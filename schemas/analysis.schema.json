{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Credit Report Analysis",
  "type": "object",
  "required": ["file", "summary", "violations", "errors", "actions", "meta"],
  "properties": {
    "file": {
      "type": "object",
      "required": ["name", "id", "processedAt"],
      "properties": {
        "name": { "type": "string" },
        "id": { "type": "string" },
        "processedAt": { "type": "string", "format": "date-time" }
      }
    },
    "summary": {
      "type": "object",
      "required": ["headline", "score"],
      "properties": {
        "headline": { "type": "string" },
        "score": { "type": "string" },
        "highlights": { "type": "array", "items": { "type": "string" } }
      }
    },
    "violations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "severity", "recommendation"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "severity": { "type": "string", "enum": ["high", "medium", "low"] },
          "accounts": {
            "type": "array",
            "items": { "type": "object", "properties": { "name": { "type": "string" }, "acct": { "type": "string" }, "quote": { "type": "string" } }, "required": ["name"] }
          },
          "recommendation": { "type": "string" },
          "evidence": { "type": "array", "items": { "type": "string" } },
          "tags": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "errors": {
      "type": "array",
      "items": { "type": "object", "required": ["id", "type", "account"], "properties": { "id": { "type": "string" }, "type": { "type": "string" }, "account": { "type": "string" }, "severity": { "type": "string" }, "quote": { "type": "string" } } }
    },
    "actions": {
      "type": "array",
      "items": { "type": "object", "required": ["id", "type", "label"], "properties": { "id": { "type": "string" }, "type": { "type": "string" }, "label": { "type": "string" }, "target": { "type": "array", "items": { "type": "string" } }, "confidence": { "type": "number" } } }
    },
    "meta": {
      "type": "object",
      "properties": {
        "pages": { "type": "integer" },
        "extractedChars": { "type": "integer" },
        "model": { "type": "string" }
      }
    }
  }
}
